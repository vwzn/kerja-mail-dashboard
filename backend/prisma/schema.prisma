datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
}

model Domain {
    domainId     Int      @id @default(autoincrement())
    domainName   String
    domainStatus String
    emailAcount  String
    createdAt    DateTime @default(now())
}

model Mailbox {
    mailboxId Int @id @default(autoincrement())
    emailAddress String
    storageUsage Int
}
